{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build crawler for linux-arm",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                // Ask dotnet build to generate full paths for file names.
                // "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                // "/consoleloggerparameters:NoSummary",
                "-r", "linux-arm",
                "-c", "Release",
                "--self-contained", "true"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceRoot}/Watchtower.Crawler",
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish crawler for linux-arm",
            "command": "tar",
            "type": "shell",
            "args": ["-czvf", "${workspaceRoot}/published/crawler-linux-arm.tar.gz", "${workspaceRoot}/bin/Release/net6.0/linux-arm/publish"],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "dependsOn": ["build crawler for linux-arm"]
        }
    ]
}
